{
  "server": {
    "protocol": "https",
    "host": "{{host}}"
  },
  "adam": {
    "authorize_url": "{{sso_domain}}/oauth/authorize",
    "access_url": "{{sso_domain}}/oauth/access_token",
    "oauth": 2,
    "key": "{{client_id}}",
    "secret": "{{client_secret}}",
    "scope": ["all"],
    "state": true,
    "callback": "/handle_adam_callback",
    "transport": "session"
  }
}
